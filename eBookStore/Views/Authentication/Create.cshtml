@model BusinessObject.Model.User

@{
    ViewData["Title"] = "Create";
}

<h1>Book Stores</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Login</div>
                <div class="card-body">
                    <form asp-action="CreateSave">
                        <div class="form-group">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <label asp-for="EmailAddress">emailAdress:</label>
                            <input type="text" asp-for="EmailAddress" class="form-control" required />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Password:</label>
                            <input type="text" asp-for="Password" class="form-control" required />
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>
                        <button style="margin-top: 10px" type="submit" class="btn btn-danger btn-block m">Sign up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>